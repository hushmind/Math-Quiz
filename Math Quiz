<?php
session_start();

if ($_SERVER['REQUEST_METHOD'] == 'POST' && isset($_POST['difficulty'])) {
    $difficulty = $_POST['difficulty'];
    $num1 = rand(1, 10);
    $num2 = rand(1, 10);

    if ($difficulty == 'easy') {
        $num1 = rand(1, 5);
    } elseif ($difficulty == 'hard') {
        $num1 = rand(10, 20);
    }

    $answer = $num1 + $num2;
    $_SESSION['question'] = "$num1 + $num2 = ?";
    $_SESSION['answer'] = $answer;
    echo $_SESSION['question'];
}
?>
