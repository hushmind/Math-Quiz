<?php
session_start();


if ($_SERVER['REQUEST_METHOD'] == 'POST' && !isset($_POST['answer'])) {
    if (is_numeric($_POST['answer'])) {  // Check if input is numeric
        if ($_POST['answer'] == $_SESSION['answer']) {
            $_SESSION['score']++;
            echo "Correct!";
        } else {
            echo "Wrong answer!";
        }
    } else {
        echo "Please enter a valid number!";
    }
}
?>
